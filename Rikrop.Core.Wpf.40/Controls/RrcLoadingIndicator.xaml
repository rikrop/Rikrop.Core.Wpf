    <Style TargetType="{x:Type Controls:RrcLoadingIndicator}">
        <Setter Property="LoadingContentTemplate"
                Value="{StaticResource RoundWaitImage}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Controls:RrcLoadingIndicator}">
                    <Border Background="{TemplateBinding Background}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            BorderBrush="{TemplateBinding BorderBrush}">
                        <ContentPresenter Content="{TemplateBinding LoadingContent}"
                                          Margin="{TemplateBinding Padding}"
                                          ContentTemplate="{TemplateBinding LoadingContentTemplate}"
                                          ContentTemplateSelector="{TemplateBinding LoadingContentTemplateSelector}"
                                          ContentStringFormat="{TemplateBinding LoadingContentStringFormat}"
                                          RenderTransformOrigin="0.5,0.5"
                                          x:Name="LoadingContent">
                            <ContentPresenter.RenderTransform>
                                <RotateTransform />
                            </ContentPresenter.RenderTransform>
                        </ContentPresenter>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsLoading"
                                 Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard Name="LoadingStoryboard">
                                    <Storyboard DesiredFrameRate="30">
                                        <DoubleAnimation From="0"
                                                         To="360"
                                                         Duration="0:0:1"
                                                         RepeatBehavior="Forever"
                                                         Storyboard.TargetName="LoadingContent"
                                                         Storyboard.TargetProperty="(ContentPresenter.RenderTransform).(RotateTransform.Angle)" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <StopStoryboard BeginStoryboardName="LoadingStoryboard" />
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>