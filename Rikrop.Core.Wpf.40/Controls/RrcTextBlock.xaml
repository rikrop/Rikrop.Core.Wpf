<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Controls="clr-namespace:Rikrop.Core.Wpf.Controls">
    <Style x:Key="DefaultRrcTextBlockStyle"
           TargetType="{x:Type Controls:RrcTextBlock}"
           BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontSize"
                Value="16" />
        <Setter Property="Margin"
                Value="4" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="TextTrimming"
                Value="CharacterEllipsis" />
    </Style>

    <Style TargetType="{x:Type Controls:RrcTextBlock}"
           BasedOn="{StaticResource DefaultRrcTextBlockStyle}" />
</ResourceDictionary>